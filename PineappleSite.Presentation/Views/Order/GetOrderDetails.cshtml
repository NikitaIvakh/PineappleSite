@using Microsoft.IdentityModel.JsonWebTokens
@using PineappleSite.Presentation.Utility
@model PineappleSite.Presentation.Models.Orders.OrderHeaderViewModel

@{
    ViewData["Title"] = "Детали заказа";
}

<form method="post">
    <br />
    <input asp-for="OrderHeaderId" hidden />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1 text-warning h3">Информация о заказе</div>
                    <div class="col-12 col-md-4 offset-md-2 text-right mt-2">
                        <a asp-action="OrderIndex" class="btn btn-warning form-control btn-sm">Вернуться к заказам</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row my-1">
                                <div class="col-3">Имя</div>
                                <div class="col-9"><input asp-for="Name" readonly class="form-control" /></div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Телефон</div>
                                <div class="col-9"><input asp-for="PhoneNumber" readonly class="form-control" /></div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Почта</div>
                                <div class="col-9"> <input asp-for="Email" readonly class="form-control" /></div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Дата заказа</div>
                                <div class="col-9"><input value="@Model.OrderTime.ToShortDateString()" readonly class="form-control" /></div>
                            </div>

                            @{
                                if (User.Claims.Where(key => key.Type == JwtRegisteredClaimNames.Sub)?.FirstOrDefault()?.Value == StaticDetails.UserAdmin)
                                {
                                    <div class="row my-1">
                                        <div class="col-3">Id Сессии</div>
                                        <div class="col-9"><input asp-for="StripeSessionId" readonly class="form-control" /></div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">Id Оплаты</div>
                                        <div class="col-9"><input asp-for="PaymentIntentId" readonly class="form-control" /></div>
                                    </div>
                                }
                            }

                            <div class="row my-1">
                                <div class="col-3">Статус заказа</div>
                                <div class="col-9"><input asp-for="Status" readonly class="form-control" /></div>
                            </div>

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3"><span class="text-warning">Обзая стоимость заказа</span></h4>
                            <label class="bg-info text-dark text-center form-control my-2">Статус заказа - @Model.Status</label>

                            <ul class="list-group mb-3">
                                @{
                                    foreach (var detail in Model.OrderDetails)
                                    {
                                        <li class="list-group-item d-flex justify-content-between p-2">
                                            <div class="row container">
                                                <div class="col-8">

                                                    <h6 class="my-0 text-muted">@detail.ProductName</h6>
                                                    <small class="text-muted">Стоимость: @detail.Price Byn</small><br />
                                                    <small class="text-muted">Количество : @detail.Count</small>
                                                </div>
                                                <div class="col-4 text-end"><p class="text-success">@((detail.Count * detail.Price)) Byn</p></div>
                                            </div>
                                        </li>
                                    }
                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6"><h5 class="text-white">ИТОГО</h5></div>
                                        <div class="col-6 text-end"><h5 class="text-white">@Model.OrderTotal Byn</h5></div>
                                    </div>
                                </li>
                            </ul>

                            @{
                                if (Model.Status == StaticDetails.Status_Approved)
                                {
                                    if (User.Claims.Where(key => key.Type == JwtRegisteredClaimNames.Sub)?.FirstOrDefault()?.Value == StaticDetails.UserAdmin)
                                    {
                                        <button asp-action="OrderReadyForPickup" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-success form-control my-1">Заказ готов</button>
                                    }
                                }

                                if (Model.Status == StaticDetails.Status_ReadyForPickup)
                                {
                                    if (User.Claims.Where(key => key.Type == JwtRegisteredClaimNames.Sub)?.FirstOrDefault()?.Value == StaticDetails.UserAdmin)
                                    {
                                        <button asp-action="CompleteOrder" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-success form-control my-1">Завершить заказ</button>
                                    }
                                }

                                if (Model.Status == StaticDetails.Status_Approved || Model.Status == StaticDetails.Status_ReadyForPickup)
                                {
                                    <button asp-action="CancelOrder" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-danger form-control my-1">Отменить заказ</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/orders/orderIndex.js"></script>
}