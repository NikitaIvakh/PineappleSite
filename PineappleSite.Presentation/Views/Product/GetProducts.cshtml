@model IEnumerable<PineappleSite.Presentation.Models.Products.ProductViewModel>

@{
    ViewData["Title"] = "Список продуктов";
}

<h1>Список продуктов</h1>

<form>
    <div class="card shadow border-4 mt-3 mb-md-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Список купонов</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Добавить новый продукт</a>
                </div>
            </div>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Идентификатор</th>
                        <th>Наименование</th>
                        <th>Описание</th>
                        <th>Категория</th>
                        <th>Стоимости продукта</th>
                        <th>Детали</th>
                        <th>Обновление</th>
                        <th>Удаление</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.ProductCategory</td>
                                <td>@item.Price</td>
                                <td>
                                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Детали</a>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                </td>
                                <td>
                                    <form asp-action="Delete" asp-route-id="@item.Id" style="display:inline;"
                                          onsubmit="return confirm('Вы действительно хотите удалить данную запись?')" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger d-inline">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>