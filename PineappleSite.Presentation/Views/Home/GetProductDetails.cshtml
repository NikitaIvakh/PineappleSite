@using PineappleSite.Presentation.Extecsions
@using System.Globalization
@model PineappleSite.Presentation.Models.Products.ProductViewModel

@{
    ViewData["Title"] = @Localizer["Home Page"];
    <link rel="stylesheet" href="~/css/home/getProductDetails.css" asp-append-version="true"/>
}

<form method="post" action="/GetProductDetails">
    <input asp-for="Id" hidden />

    <div class="pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@Model.Price Byn</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded car-image" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-success text-white p-3 border">@Model.ProductCategory.GetDisplayName()</span>
                                    <p class="text-secondary">Описание: @Html.Raw(Model.Description)</p>
                                    <div class="row mx-0">
                                        <input class="form-control" asp-for="Count" />
                                        <span class="text-danger" asp-validation-for="Count"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row bg-dark">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success btn-square form-control btn-lg" asp-action="GetProducts" asp-route-culture="@CultureInfo.CurrentCulture.Name" style="height:50px;">@Localizer["Back to Products"]</a>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <div class="d-flex justify-content-end">
                        <button asp-action="AddToCart" asp-controller="Home" asp-route-culture="@CultureInfo.CurrentCulture.Name" type="submit" class="btn btn-primary form-control btn-lg me-2" style="height:50px;">@Localizer["AddToCart"]</button>
                        <button asp-action="AddToFavorites" asp-controller="Home" asp-route-culture="@CultureInfo.CurrentCulture.Name" type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">@Localizer["AddToFavorites"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}