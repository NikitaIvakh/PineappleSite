@using PineappleSite.Presentation.Extecsions
@model PineappleSite.Presentation.Models.Products.ProductViewModel

<style>
    .car-image {
        max-width: 100%;
        max-height: 300px;
        object-fit: cover;
    }

    .details-container {
        display: flex;
        align-items: center;
    }

    .details-text {
        margin-left: 20px;
    }
</style>

<form method="post">
    <input asp-for="Id" hidden />
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-warning">@Model.Price Byn</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="https://placehold.co/600x400" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-success text-white p-3 border">@Model.ProductCategory.GetDisplayName()</span>
                                    <p class="text-secondary">Описание: @Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer row bg-dark">
            <div class="col-12 col-md-6 pb-1 ">
                <a class="btn btn-success btn-square form-control btn-lg" asp-action="GetProducts" style="height:50px;">Вернуться к продуктам</a>
            </div>
            <div class="col-12 col-md-6 ">
                <button type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;" disabled>Добавить в корзину</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}