@using System.Globalization
@model PineappleSite.Presentation.Services.Coupons.ResultViewModel<PineappleSite.Presentation.Models.Coupons.CouponViewModel>

@{
    ViewData["Title"] = Localizer["Details"];
}

<form class="container col-7" asp-action="Details">
    <br/>
    <div class="container border p-3 card shadow border-4 mt-3 mb-md-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">@Localizer["Details"]</h1>
                </div>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.Data!.CouponId" hidden>Идентификатор</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" id="@Model.Data!.CouponId" name="@Model.Data!.CouponId" asp-for="@Model.Data!.CouponId" readonly hidden/>
                    <span class="text-danger" asp-validation-for="@Model.Data!.CouponId" hidden></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.Data.CouponCode">@Localizer["Coupon Code"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" id="@Model.Data.CouponCode" asp-for="@Model.Data.CouponCode" readonly/>
                    <span class="text-danger" asp-validation-for="@Model.Data.CouponCode"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" asp-for="@Model.Data.DiscountAmount" style="font-size:20px;">@Localizer["Discount Amount"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" id="@Model.Data.DiscountAmount" asp-for="@Model.Data.DiscountAmount" readonly/>
                    <span class="text-danger" asp-validation-for="@Model.Data.DiscountAmount"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" asp-for="@Model.Data.MinAmount" style="font-size:20px;">@Localizer["Min Amount"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" id="@Model.Data.MinAmount" asp-for="@Model.Data.MinAmount" readonly/>
                    <span class="text-danger" asp-validation-for="@Model.Data.MinAmount"></span>
                </div>
            </div>
            <div class="col-5 offset-3">
                <a class="btn-primary btn form-control" asp-action="Index">@Localizer["Go Back"]</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}