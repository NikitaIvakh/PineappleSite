@using System.Globalization
@model PineappleSite.Presentation.Models.Coupons.CreateCouponViewModel

@{
    ViewData["Title"] = Localizer["Add Coupon"];
}

<form class="container col-7" asp-action="Create">
    <br />
    <div class="container border p-3 card shadow border-4 mt-3 mb-md-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">@Localizer["Add Coupon"]</h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["Coupon Code"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="CouponCode" />
                    <span class="text-danger" asp-validation-for="CouponCode"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["Discount Amount"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="DiscountAmount" />
                    <span class="text-danger" asp-validation-for="DiscountAmount"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["Min Amount"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="MinAmount" />
                    <span class="text-danger" asp-validation-for="MinAmount"></span>
                </div>
            </div>
            <div class="col-5 offset-1">
                <a class="btn-primary btn form-control" asp-action="Index" asp-route-culture="@CultureInfo.CurrentCulture.Name">@Localizer["Go Back"]</a>
            </div>
            <div class="col-5">
                <input type="submit" value="@Localizer["Add Coupon"]" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}