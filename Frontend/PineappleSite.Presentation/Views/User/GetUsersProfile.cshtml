@model PineappleSite.Presentation.Models.Paginated.PaginatedList<PineappleSite.Presentation.Models.Users.GetUsersProfileViewModel>

@{
    ViewData["Title"] = Localizer["List of users"];
    <link rel="stylesheet" href="~/css/users/userList.css" asp-append-version="true"/>
}

<form asp-action="GetUsersProfile" method="get">
    <div class="form-actions no-color">
        <p class="mb-0">
            <label for="searchUser" style="font-size:20px; color:white">@Localizer["User Search"]</label>
        </p>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchUser" id="searchUser" value="@ViewData["SearchUser"]"/>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary search-button">@Localizer["Search"]</button>
                <button type="button" id="clearSearch" class="btn btn-secondary clear-button">@Localizer["Clear"]</button>
            </div>
        </div>
    </div>
</form>
<form>
    <div class="card shadow border-4 mt-3 mb-md-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">@Localizer["Users Profiles"]</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <div class="col-12 form-text">
                    </div>
                </div>
            </div>
            <table class="table text-center">
                <thead>
                <tr>
                    <th>@Localizer["FirstName"]</th>
                    <th>@Localizer["LastName"]</th>
                    <th>@Localizer["UserName"]</th>
                    <th>@Localizer["EmailAddress"]</th>
                    <th>@Localizer["Age"]</th>
                    <th>@Localizer["Description"]</th>
                    <th>@Localizer["Role"]</th>
                    <th>@Localizer["Profile Image"]</th>
                    <th>@Localizer["Update"]</th>
                </tr>
                </thead>
                <tbody>
                @{
                    int itemCount = 0;
                }
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.EmailAddress</td>
                            <td>@item.Age</td>
                            <td>@(item.Description != null ? (item.Description.Length > 10 ? item.Description[..10] + "..." : item.Description) : "")</td>
                            <td>
                                @{
                                    foreach (var role in item.Role)
                                    {
                                        @role
                                    }
                                }
                            </td>
                            <td>
                                <img src="@item.ImageUrl" loading="lazy" style="width: 100px; height: 100px; object-fit: cover; display: block; margin: 0;" alt=""/>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-success" asp-action="ProfileForAdmin" asp-route-userId="@item.UserId">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                        itemCount++;
                    }
                }
                </tbody>
            </table>
            <div class="pagination">
                @if (Model.HasPreviosPage)
                {
                    <a asp-action="Index"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-searchUser="@ViewData["SearchUser"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       class="page-item">
                        <span>&laquo; @Localizer["Previous"]</span>
                    </a>
                }
                @if (Model.HasNextPage)
                {
                    <a asp-action="Index"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-searchUser="@ViewData["SearchUser"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       class="page-item">
                        <span>@Localizer["Next"] &raquo;</span>
                    </a>
                }
            </div>
        </div>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    document.getElementById("clearSearch").addEventListener("click", function () {
        document.getElementById("searchUser").value = "";
        window.location.href = "/User/GetUsersProfile";
    });
</script>