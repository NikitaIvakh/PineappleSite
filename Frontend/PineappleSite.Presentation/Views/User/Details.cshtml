@model PineappleSite.Presentation.Models.Users.GetUserViewModel

@{
    ViewData["Title"] = Localizer["User details"];
}

<form class="container col-7" asp-action="Details">
    <br/>
    <div class="container border p-3 card shadow border-4 mt-3 mb-md-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">@Localizer["User details"]</h1>
                </div>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;" hidden>@Localizer["Id"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="UserId" readonly hidden/>
                    <span class="text-danger" asp-validation-for="UserId" hidden></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["FirstName"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="FirstName" readonly/>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["LastName"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="LastName" readonly/>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["EmailAddress"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="EmailAddress" readonly/>
                    <span class="text-danger" asp-validation-for="EmailAddress"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["UserName"]</label>
                </div>
                <div class="col-6 pb-3">
                    <input class="form-control" asp-for="UserName" readonly/>
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label class="control-label pt-2" style="font-size:20px;">@Localizer["Role"]</label>
                </div>
                <div class="col-6 pb-3">
                    @{
                        foreach (var role in Model.Role)
                        {
                            <input class="form-control" asp-for="@role" readonly/>
                        }
                    }
                    <span class="text-danger" asp-validation-for="Role"></span>
                </div>
            </div>
            <div class="col-5 offset-3">
                <a class="btn-primary btn form-control" asp-action="Index">@Localizer["Go back"]</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}