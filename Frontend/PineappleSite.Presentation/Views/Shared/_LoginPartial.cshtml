@using System.Globalization
<ul class="navbar-nav">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Profile" title="Профиль">@Localizer["Profile"] - @User.Identity.Name!</a>
            </li>

            <li class="nav-item">
                <form class="form-inline" method="post" asp-action="Logout" asp-controller="Authenticate" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link">@Localizer["Logout"]</button>
                </form>
            </li>
        }

        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Register" asp-controller="Authenticate">@Localizer["Register"]</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-action="Login" asp-controller="Authenticate">@Localizer["Login"]</a>
            </li>
        }
    }
</ul>