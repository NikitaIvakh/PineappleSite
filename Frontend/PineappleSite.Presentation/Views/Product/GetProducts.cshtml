@using PineappleSite.Presentation.Models.Paginated
@using System.Globalization
@model PaginatedList<PineappleSite.Presentation.Models.Products.ProductViewModel>

@{
    ViewData["Title"] = Localizer["List of products"];
    <link rel="stylesheet" href="~/css/products/productList.css" asp-append-version="true"/>
}

<style>
    .table {
        margin: 0 auto;
        width: 90%;
    }

    .some-format {
        padding: 10px;
        text-align: center;
        vertical-align: middle;
    }
</style>

@{
    if (Model is not null && Model.Count > 0)
    {
        <div class="col-12 form-text">
            <form asp-action="GetProducts" method="get">
                <div class="form-actions no-color">
                    <p class="mb-0">
                        <label for="searchProduct" style="font-size:20px; color:white">@Localizer["Product Search"]</label>
                    </p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="searchProduct" id="searchProduct" value="@ViewData["SearchProduct"]"/>
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary search-button">@Localizer["Search"]</button>
                            <button type="button" id="clearSearch" class="btn btn-secondary clear-button">@Localizer["Clear"]</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <form id="deleteSelectedForm" asp-action="DeleteProductList" onsubmit="return confirm('@Localizer["Do you really want to delete these records?"]')" method="post">
            <div class="card shadow border-4 mt-3 mb-md-4">
                <div class="card-header bg-secondary bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h1 class="text-white">@Localizer["List of products"]</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row pb-3">
                        <div class="col-6">
                        </div>
                        <div class="col-6 text-end">
                            <a asp-action="Create" class="btn btn-outline-primary">
                                <i class="bi bi-plus-square"></i> @Localizer["Add a new product"]
                            </a>
                            <br/> <br/>
                            <button id="deleteAllButton" type="submit" class="btn btn-danger" style="display:none;" form="deleteSelectedForm">@Localizer["Delete selected ones"]</button>
                            <div class="col-12 form-text">
                            </div>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="some-format"></th>
                            <th class="some-format">@Localizer["Id"]</th>
                            <th class="some-format">@Localizer["Product name"]</th>
                            <th class="some-format">@Localizer["Description"]</th>
                            <th class="some-format">@Localizer["ProductCategory"]</th>
                            <th class="some-format">@Localizer["Price"]</th>
                            <th class="some-format">@Localizer["Image"]</th>
                            <th class="some-format">@Localizer["Details"]</th>
                            <th class="some-format">@Localizer["Update"]</th>
                            <th class="some-format">@Localizer["Delete"]</th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            int itemCount = 0;
                        }
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="some-format">
                                        <input type="checkbox" name="selectedProducts" value="@item.Id"/>
                                    </td>
                                    <td class="some-format">@item.Id</td>
                                    <td class="some-format">@item.Name</td>
                                    <td class="some-format">@item.Description</td>
                                    <td class="some-format">@item.ProductCategory</td>
                                    <td class="some-format">@item.Price</td>
                                    <td class="some-format" style="padding: 0;">
                                        <img src="@item.ImageUrl" alt="@Localizer["Product Image"]" loading="lazy" style="width: 100px; height: 100px; object-fit: cover; display: block; margin: 0;">
                                    </td>
                                    <td class="some-format">
                                        <a class="btn btn-sm btn-success" asp-action="Details" asp-route-productId="@item.Id">@Localizer["Details"]</a>
                                    </td>
                                    <td class="some-format">
                                        <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-productId="@item.Id">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    </td>
                                    <td class="some-format">
                                        <button class="btn btn-sm btn-danger" asp-action="Delete" asp-route-productId="@item.Id">
                                            <i class="bi bi-trash">@Localizer["Delete product"]</i>
                                        </button>
                                    </td>
                                </tr>
                                itemCount++;
                            }
                        }
                        </tbody>
                    </table>
                    <div class="pagination">
                        @if (Model.HasPreviosPage)
                        {
                            <a asp-action="GetProducts"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-searchUser="@ViewData["SearchUser"]"
                               asp-route-pageNumber="@(Model.PageIndex - 1)"
                               class="page-item">
                                <span>&laquo; @Localizer["Previous"]</span>
                            </a>
                        }
                        @if (Model.HasNextPage)
                        {
                            <a asp-action="GetProducts"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-searchUser="@ViewData["SearchUser"]"
                               asp-route-pageNumber="@(Model.PageIndex + 1)"
                               class="page-item">
                                <span>@Localizer["Next"] &raquo;</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </form>
    }

    else
    {
        <a asp-action="Create" class="btn btn-outline-primary" style="font-size: 20px; color:white">
            <i class="bi bi-plus-square"></i> @Localizer["Add a new product"]
        </a>
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/products/productList.js" asp-append-version="true"></script>